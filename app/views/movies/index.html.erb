<div class="container">
  <h1>Movies</h1>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <%= form_tag movies_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
          %>
        <% end %>
        <% @movies.each do |movie| %>
        <h4><%= movie.title %></h4>
        <p><%= movie.syllabus %></p>
        <% end %>
    </div>
  </div>
</div>
